
@page
@model Senparc.Xscf.WeixinManager.Areas.Admin.WeixinManager.IndexModel
@{
    ViewData["Ttile"] = "公众号控制中心";
}
@section HeaderContent{
    <link href="~/node_modules/gentelella/vendors/bootstrap-progressbar/css/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet">
    <link href="~/node_modules/gentelella/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
    <script src="~/node_modules/gentelella/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js" type="ae4759af005b3a765ba5b8d3-text/javascript"></script>
}

<div class="title_left">
    <h3>公众号控制中心</h3>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12">
        <div class="x_content">
            <div class="row">
                <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
                    <div class="tile-stats">
                        <div class="icon">
                            <i class="fa fa-caret-square-o-right"></i>
                        </div>
                        <div class="count">@Model.MpAccountDtos.Count</div>
                        <h3>公众号数量</h3>
                        <p>已经录入系统的公众号</p>
                    </div>
                </div>

                <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
                    <div class="tile-stats">
                        <div class="icon">
                            <i class="fa fa-caret-square-o-right"></i>
                        </div>
                        <div class="count">@Model.AccessTokenBags.Count</div>
                        <h3>运行账号数量</h3>
                        <p>已经生效并连接微信服务器的账号数量</p>
                    </div>
                </div>

                <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
                    <div class="tile-stats">
                        <div class="icon">
                            <i class="fa fa-caret-square-o-right"></i>
                        </div>
                        <div class="count">@Model.RegisteredMpAccountCount</div>
                        <h3>总微信用户数</h3>
                        <p>在当前平台交互过或自动拉取关注的用户数</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12">
        <div class="x_content">

            @foreach (var mpAccountDto in Model.MpAccountDtos)
            {
                var lastTimePercent = 0D;
                var expired = false;
                var accessTokenBag = Model.AccessTokenBags.FirstOrDefault(z => z.Name == $"{mpAccountDto.Name}-{mpAccountDto.Id}");
                if (accessTokenBag?.AccessTokenResult?.access_token.IsNullOrEmpty() == false)
                {
                    var lastTime = (accessTokenBag.AccessTokenExpireTime - SystemTime.Now);
                    if (lastTime.TotalSeconds > 0 && accessTokenBag.AccessTokenResult != null)
                    {
                        lastTimePercent = ((accessTokenBag.AccessTokenResult.expires_in - lastTime.TotalSeconds) / lastTime.TotalSeconds) * 100;
                    }
                    else
                    {
                        expired = true;
                    }
                }

                <div class="col-md-6 col-sm-6 ">
                    <div class="x_panel fixed_height_320">
                        <div class="x_title">
                            <h2>@mpAccountDto.Name <small>ID:@mpAccountDto.Id</small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="dashboard-widget-content">
                                <ul class="quick-list">
                                    <li><i class="fa fa-line-chart"></i><a href="#">查看用户</a></li>
                                    <li><i class="fa fa-thumbs-up"></i><a href="#">查看分组</a></li>
                                    <li><i class="fa fa-calendar-o"></i><a href="#">查看标签</a></li>
                                    <li><i class="fa fa-area-chart"></i><a href="#">对话</a></li>
                                    <li><i class="fa fa-cog"></i><a href="#">编辑</a></li>
                                </ul>
                                @*<div class="sidebar-widget">
                                        <h4>凭证有效期</h4>
                                        <canvas width="150" height="80" id="chart_gauge_@mpAccountDto.Id" class="" style="width: 160px; height: 100px;"></canvas>
                                        <div class="goal-wrapper">
                                            <span id="gauge-text_@mpAccountDto.Id" class="gauge-value gauge-chart pull-left">0</span>
                                            <span class="gauge-value pull-left">%</span>
                                            <span id="goal-text-@mpAccountDto.Id" class="goal-value pull-right">100%</span>
                                        </div>
                                    </div>*@
                                <div class="sidebar-widget">
                                    <h4>凭证有效期</h4>
                                    <canvas width="150" height="80" id="chart_gauge_02" class="" style="width: 160px; height: 100px;"></canvas>
                                    <div class="goal-wrapper">
                                        <span class="gauge-value pull-left">$</span>
                                        <span id="gauge-text2" class="gauge-value pull-left">2,100</span>
                                        <span id="goal-text2" class="goal-value pull-right">$5,000</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>